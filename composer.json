{
    "name": "danil-vladimirov/swarm-kirby-exhibition-website",
    "description": "Exhibition website theme for Kirby CMS.",
    "type": "project",
    "keywords": [
        "kirby",
        "cms",
        "theme",
        "exhibition"
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0",
        "getkirby/cms": "^4.0"
    },
    "config": {
        "allow-plugins": {
            "getkirby/composer-installer": true
        },
        "optimize-autoloader": true
    },
    "scripts": {
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@php -S localhost:8000 kirby/router.php"
        ]
    }
}